<div class="row">
  <div class="col-md-8">
    <div class="media">
      <br />
<!-- call avatar_url to fetch the current user's avatar. -->
      <% avatar_url = @user.avatar_url(128) %>
      <% if avatar_url %>
        <div class="media-left">
<!--  we use Rails' image_tag method to create an <img>.-->
          <%= image_tag avatar_url, class: 'media-object' %>
        </div>
      <% end %>
      <div class="media-body">
        <h2 class="media-heading"><%= @user.name %></h2>
        <small>
          <%= pluralize(@user.posts.count, 'post') %>,
          <%= pluralize(@user.comments.count, 'comment') %>
        </small>
      </div>
    </div>
  </div>
</div>

<!-- we display all of the user's posts and comments using partials.-->

<h2>Posts</h2>
<% if user_has_no_posts?(@user)%>
  <p><%= "#{@user.name} has not submitted any posts yet." %></p>
<% end %>
<%= render @user.posts %>

<h2>Comments</h2>
<% if user_has_no_comments?(@user) %>
  <p><%= "#{@user.name} has not submitted any comments yet." %></p>
<% end %>
<%= render @user.comments %>

<h2>Favorite Posts</h2>
<% if user_has_favorites?(@user) %>
  <p><%= "#{@user.name} doesn't have any favorite posts yet." %></p>
<% end %>
<%= render partial: 'favorites/favorites' %>
